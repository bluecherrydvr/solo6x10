#!/bin/sh

set -e

PKG="solo6010-dkms"
MOD="solo6x10-edge"
PKGVER=`dpkg-query -W -f='${Version}' "$PKG" | cut -d: -f2 | cut -f1 -d-`

case "$1" in
	remove|upgrade)
		echo "Removing all [$MOD-$PKGVER] DKMS Modules"
		dkms remove -m $MOD -v $PKGVER --all >/dev/null || true
		echo "Done."
	;;
esac

